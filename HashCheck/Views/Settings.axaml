	<UserControl.Styles>
		<Style Selector="Grid.checkBox-hash">
			<Setter Property="Background" Value="{DynamicResource CheckBoxColor}"/>
			<Setter Property="Margin" Value="0 0 5 5"/>
		</Style>

		<Style Selector="Grid.checkBox-hash CheckBox">
			<Setter Property="Margin" Value="5 0 -4 0"/>
		</Style>

		<Style Selector="Grid.checkBox-hash TextBlock">
			<Setter Property="Margin" Value="0 0 5 0"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</UserControl.Styles>
	
	<TabControl TabStripPlacement="Left" Name="SettingTabControl">
		<TabItem Name="SettingMainTabItem">
			<TabItem.Header>
				<TextBlock Text="Хэши"/>
			</TabItem.Header>
			<TabItem.Content>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="50"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Button Classes="btn-contentPath" Tag="НАЗАД"
						    Command="{Binding $parent[UserControl].DataContext.DisplayMainPage}">
						<Path Data="{StaticResource arrow_curve_left_regular}"/>
					</Button>
					<ItemsControl ItemsSource="{Binding SettingFile.Hashes}"
								  Margin="0 5"
								  Grid.Row="1">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel Orientation="Horizontal"/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Grid Classes="checkBox-hash">
									<DockPanel>
										<CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
										<TextBlock Text="{Binding HashName}" />
									</DockPanel>
								</Grid>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</Grid>
			</TabItem.Content>
		</TabItem>

		<TabItem>
			<TabItem.Header>
				<TextBlock Text="Темы"/>
			</TabItem.Header>
			<TabItem.Content>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="50"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Button Classes="btn-contentPath" Tag="НАЗАД"
						    Command="{Binding $parent[UserControl].DataContext.DisplayMainPage}">
						<Path Data="{StaticResource arrow_curve_left_regular}"/>
					</Button>
					<ListBox ItemsSource="{Binding StylesList}"
							 SelectedItem="{Binding StyleSelected}"
							 VerticalAlignment="Top"
							 HorizontalAlignment="Left"
							 Margin="0 5"
							 Grid.Row="1">
						<ListBox.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel Orientation="Horizontal"/>
							</ItemsPanelTemplate>
						</ListBox.ItemsPanel>
						<ListBox.ItemTemplate>
							<DataTemplate>
								<DockPanel>
									<Grid ColumnDefinitions="10" RowDefinitions="1*, 1*">
										<Grid Background="{Binding ColorBase}"/>
										<Grid Background="{Binding ColorPrimary}" Grid.Row="1"/>
									</Grid>
									<TextBlock Text="{Binding Name}"/>
								</DockPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</Grid>
			</TabItem.Content>
		</TabItem>
	</TabControl>
	
